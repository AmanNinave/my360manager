{
    "version": 2,
    "builds": [
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      },
      {
        "src": "frontend/dist/**/*",
        "use": "@vercel/static"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "/backend/index.js"
      }
    ],
    "redirects": [
      {
        "source": "/(.*)",
        "destination": "/",
        "statusCode": 200
      }
    ]
  }
  